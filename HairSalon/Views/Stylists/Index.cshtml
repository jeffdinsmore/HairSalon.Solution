@using HairSalon.Models;
@{
  Layout = "_Layout";
}
@model List<HairSalon.Models.Stylist>;

<h1>Stylists</h1>
@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}
<br>
@using (Html.BeginForm())
{
  @Html.Label("Filter Stylists by Name")
  @Html.TextBox("Name")
  <input type="submit" value="Search" class="btn btn-success btn-sm"/> //value is the button text
}
<br>
<p>@Html.ActionLink("Add new stylist", "Create", null, null, new { @class = "btn btn-success btn-sm" })</p>
<p>@Html.ActionLink("Show all Stylists", "Index", null, null, new { @class = "btn btn-success btn-sm" })</p>