@model HairSalon.Models.Stylist

@{
  Layout = "_Layout";
}

<h4>Add a hair stylist</h4>
@using (Html.BeginForm())
{
  <h4>Enter the stylist's Name</h4>
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, 
    new {@required="required"})
    <h4>Enter the stylist's phone number</h4>
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, 
    new {@required="required"})
    <h4>Enter the stylist's expertise notes</h4>
    @Html.LabelFor(model => model.ExpertiseNotes)
    @Html.TextBoxFor(model => model.ExpertiseNotes, 
    new {@required="required"})
    <h4>What are the stylist's days off?</h4>
    @Html.LabelFor(model => model.DaysOff)
    @Html.TextBoxFor(model => model.DaysOff, 
    new {@required="required"})

    <input type="submit" value="Add new stylist" class="btn btn-success btn-sm"/>
}
<br>
<p>@Html.ActionLink("Show all stylists", "Index", null, null, new { @class = "btn btn-success btn-sm" })
</p>