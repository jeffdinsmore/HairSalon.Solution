@using HairSalon.Models;
@{
  Layout = "_Layout";
}
@model List<HairSalon.Models.Client>;
<div class="spacer"></div>
@using (Html.BeginForm())
{
  @Html.Label("Filter Clients by Name")
  @Html.TextBox("Name")
  <input type="submit" value="Search" class="btn btn-info btn-sm"/> //value is the button text
}
<h1>Clients</h1>
@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | @client.Stylist.Name
  </li>
}
<br>
<p>@Html.ActionLink("Add New Client", "Create", null, null, new { @class = "btn btn-success btn-sm" })</p>
<p>@Html.ActionLink("Show All Clients", "Index", null, null, new { @class = "btn btn-success btn-sm" })</p>