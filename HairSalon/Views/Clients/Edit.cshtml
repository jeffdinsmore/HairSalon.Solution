@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client

<h2>Edit</h2>
<h4>Edit this client: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm()){
    @Html.HiddenFor(model => model.ClientId)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, 
    new {@required="required"})
    @Html.LabelFor(model => model.PhoneNumber)
    @Html.TextBoxFor(model => model.PhoneNumber, 
    new {@required="required"})
    @Html.LabelFor(model => model.Address)
    @Html.TextBoxFor(model => model.Address, 
    new {@required="required"})
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email, 
    new {@required="required"})
    @Html.LabelFor(model => model.StylingNotes)
    @Html.TextBoxFor(model => model.StylingNotes, 
    new {@required="required"})
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId", null, "Please Select", htmlAttributes: new{required = "Please select a stylist"})    
    
    <input class="btn btn-success btn-sm" style="width: 80px" type="submit" value="Save" />    
}
<br>
<p>@Html.ActionLink("Back to client list", "Index", null, null, new { @class = "btn btn-success btn-sm"} )</p>
